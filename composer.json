{
    "name": "vatly/vatly-laravel",
    "description": "Laravel integration for Vatly, inspired by Laravel Cashier",
    "keywords": [
        "vatly",
        "laravel",
        "subscriptions",
        "billing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sander van Hooft",
            "email": "sander@vanhooft.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "vatly/vatly-fluent-php": "^0.3.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.9",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Vatly\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vatly\\Laravel\\Tests\\": "tests/",
            "App\\Models\\": "tests/Fixtures/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vatly\\Laravel\\VatlyServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=512M",
        "analyze": "@analyse"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
